<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tutorial.PlaceholderFragment"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.5"
        android:singleLine="false"
        android:text="Firstly, let's consider how to position the device during the measurement." />

    <TextView
        android:id="@+id/heighttype_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:singleLine="false"
        android:text="@string/tutorial_manual_height" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.5"
        android:singleLine="false"
        android:text="Before starting the measure of the points, locate yourself and the device on \
a comfortable position, where you can see the screen and aim at the points correctly. \nTo \
aim at the points, you can only rotate the device keeping its camera steady, as moving it \
from its initial position will highly worsen the results." />

</LinearLayout>